<h2>All Heroines</h2>

<%= form_tag(heroines_path, method: :get) do %>
  <h3><%= label_tag :power_name, "Search superpower for heroines:" %><br></h3>
  <%= text_field_tag :power_name %>
  <%= submit_tag "Search",name: nil %>
<% end %>

<ul>
  <% @heroines.each do |heroine| %>
    <li>
      <%= link_to heroine.super_name, heroine %>
    </li>
    <br>
  <% end %>
</ul>
