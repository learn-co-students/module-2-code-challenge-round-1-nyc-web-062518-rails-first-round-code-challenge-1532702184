<h1>Power: <%= @power.name %></h1>
<h3>Description: <%= @power.description %></h3>

<h3>Heroines With This Power:</h3>
<ul>
  <% @power.heroines.each do |heroine| %>
    <li>
      <%= link_to heroine.super_name, heroine %>
    </li>
  <% end %>
</ul>

<p><%= link_to "Back to All Powers", powers_path %></p>
