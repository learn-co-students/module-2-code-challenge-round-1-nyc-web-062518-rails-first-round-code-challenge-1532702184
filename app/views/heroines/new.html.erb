<h1>Create Your Own Super Heroine!</h1>

<% if flash[:error] %>
  The following errors have occurred:
  <ul>
  <% flash[:error].each do |msg| %>
    <li><%= msg %></li>
  <% end %>
  </ul>
<% end %><br>

<%= form_for @heroine do |f| %>

  <%= f.label :name %><br>
  <%= f.text_field :name %><br>

  <%= f.label :super_name %><br>
  <%= f.text_field :super_name %><br>

  <%= f.collection_select :power_id, Power.all, :id, :name, :prompt => true %>
  <%= f.submit %>
<% end %>
