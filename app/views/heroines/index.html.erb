<h2>All Heroines</h2>

<!-- if time permits, try datalist -->
<!-- on second thought, maybe datalist only works for form_for? -->
<h4>Search By Superpower:</h4>
<%= form_tag(heroines_path, method: "get") do %>
  <%= text_field_tag(:power, params[:power]) %>
  <%= submit_tag("Search") %>
<% end %>

<ul>
  <% @heroines.each do |heroine| %>
    <li>
      <%= link_to heroine.super_name, heroine_path(heroine) %>
    </li>
    <br>
  <% end %>
</ul>

<br>
<p><%= link_to "Create a new heroine", new_heroine_path %></p>
