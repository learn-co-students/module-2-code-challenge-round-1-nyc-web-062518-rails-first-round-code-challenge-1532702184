<h2> Create HEROINE </h2>

<% if @heroine.errors.any? %>
  <% @heroine.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
<% end %>

<%= form_for @heroine do |f| %>
  <%= f.label :name %>
    <%= f.text_field :name %> <br><br>
  <%= f.label :super_name %>
    <%= f.text_field :super_name %> <br><br>
  <%= f.label :power %>
    <%= f.collection_select :power, Power.all, :id, :name %>
<%= f.submit %>
<% end %>
