<h1>New Heroine Form</h1>

<% if @heroine.errors.any? %>
  <% @heroine.errors.full_messages.each do |m| %>
    <li><%= m %></li>
  <% end %>
<% end %>

<%= form_for @heroine do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>

  <%= f.label :super_name %>
  <%= f.text_field :super_name %><br>

  <%= f.label "Select a Power" %>
  <%= f.collection_select(:power_id, Power.all, :id, :name) %>
  <%= f.submit %>
<% end %>
