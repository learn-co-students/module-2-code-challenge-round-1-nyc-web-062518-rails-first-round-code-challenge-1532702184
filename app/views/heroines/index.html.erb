<h1>All Heroines</h1>

<h3>Search by Super Power:</h3>


<%= form_tag heroines_path, method: :get do %>
  <%= text_field_tag(
      :search,
      params[:search],
      placeholder: "Search Super Powers",
  ) %>
  <%= submit_tag "Search" %>
<% end %>

<ul>
  <% @heroines.each do |heroine| %>
    <li>
      <%= link_to heroine.super_name, heroine %>
    </li>
    <br>
  <% end %>
</ul>

<p><%= link_to "Add a New Heroine", new_heroine_path %></p>
