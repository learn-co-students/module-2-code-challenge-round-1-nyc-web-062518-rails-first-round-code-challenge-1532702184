<h1>Create a Heroine!</h1>

<% if @heroine.errors.messages.any? %>
<% @heroine.errors.full_messages.each do |msg| %>
<%= msg %>
<br>
<% end %>
<% end %>

<br>

<%= form_for @heroine do |f| %>
  <%= f.label :name  %>
  <%= f.text_field :name %>

  <%= f.label :super_name  %>
  <%= f.text_field :super_name %>

  <%= f.collection_select :power_id, Power.all , :id, :name%>

  <%= f.submit %>

<% end %>

<p>
<%= link_to  "See all Heroines!", heroines_path %></p>
